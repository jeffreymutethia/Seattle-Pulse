# Backend environment template (placeholders only)

# Runtime mode
APP_ENV=local
APP_ENV_FOR_SESSION=true
FLASK_ENV=development
FLASK_APP=run:app
PORT=5000
LOGGING_LEVEL=DEBUG

# Database and Celery
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=seattle_pulse
DATABASE_URL=postgresql://postgres:postgres@db:5432/seattle_pulse
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
FETCH_INTERVAL_HOURS=8

# Security and auth
SECRET_KEY=replace-me
SECURITY_PASSWORD_SALT=replace-me
PASSWORD_RESET_SALT=replace-me
BLOCK_SIGNUPS=false

# CORS / frontend URLs
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_LOCAL=http://localhost:3000
FRONTEND_URL_STAGING=https://staging.seattlepulse.net
FRONTEND_URL_PRODUCTION=https://seattlepulse.net

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=465
MAIL_USE_TLS=false
MAIL_USE_SSL=true
MAIL_USERNAME=
MAIL_PASSWORD=
USE_GMAIL_FOR_WAITLIST_EMAILS=false

# OAuth / external providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CLIENT_SECRET_JSON=
GOOGLE_AUTH_REDIRECT_URI=http://localhost:5000/api/v1/auth_social_login/callback
